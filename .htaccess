RewriteEngine On

# Force www and HTTPS
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove index.html from URLs
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^(.*)index\.html$ /$1 [R=301,L]

RewriteEngine On

# Redirect index.html to root URL
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^index\.html$ https://www.professionhike.com/ [R=301,L]

# Set index.html as default directory index (optional but good practice)
DirectoryIndex index.html

RewriteEngine On

# Redirect non-www to www
RewriteCond %{HTTP_HOST} ^professionhike\.com [NC]
RewriteRule ^(.*)$ https://www.professionhike.com/$1 [L,R=301]

AddType application/xml .xml

ErrorDocument 404 /404.html

